<% content_for :title, "My Autobiography" %>

<div class="w-full max-w-6xl mx-auto">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <header class="text-center mb-12">
    <h1 class="font-bold text-5xl text-gray-900 mb-4">My Life Story</h1>
    <p class="text-xl text-gray-600 mb-8">A collection of chapters from my journey</p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <%= link_to "Add New Chapter", new_chapter_path, class: "rounded-md px-6 py-3 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium text-lg" %>
      <%= link_to "ðŸ“¸ Photo Gallery", photos_path, class: "rounded-md px-6 py-3 bg-gray-100 hover:bg-gray-50 text-gray-700 inline-block font-medium text-lg" %>
    </div>
  </header>

  <div id="chapters" class="space-y-8">
    <% if @chapters.any? %>
      <% @chapters.each_with_index do |chapter, index| %>
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          <div class="flex flex-col lg:flex-row">
            <!-- Chapter Image -->
            <div class="lg:w-1/3">
              <% if chapter.image_header.attached? %>
                <%= image_tag chapter.image_header, class: "w-full h-48 lg:h-full object-cover", alt: chapter.title %>
              <% else %>
                <div class="w-full h-48 lg:h-full bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center">
                  <span class="text-gray-400 text-lg">Chapter <%= index + 1 %></span>
                </div>
              <% end %>
            </div>
            
            <!-- Chapter Content -->
            <div class="lg:w-2/3 p-6">
              <div class="flex justify-between items-start mb-4">
                <div>
                  <h2 class="text-2xl font-bold text-gray-900 mb-2">
                    <%= link_to chapter.title, chapter, class: "hover:text-blue-600 transition-colors" %>
                  </h2>
                  <% if chapter.subtitle.present? %>
                    <p class="text-lg text-gray-600 mb-3"><%= chapter.subtitle %></p>
                  <% end %>
                </div>
                <span class="bg-gray-100 text-gray-600 px-3 py-1 rounded-full text-sm font-medium">
                  Chapter <%= index + 1 %>
                </span>
              </div>
              
              <!-- Content Preview -->
              <div class="text-gray-700 mb-4 line-clamp-3">
                <%= truncate(strip_tags(chapter.content.to_s), length: 200) %>
              </div>
              
              <!-- Action Buttons -->
              <div class="flex flex-wrap gap-2">
                <%= link_to "Read", chapter, class: "px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white rounded-md font-medium text-sm" %>
                <%= link_to "Edit", edit_chapter_path(chapter), class: "px-4 py-2 bg-gray-100 hover:bg-gray-50 text-gray-700 rounded-md font-medium text-sm" %>
                <%= button_to "Delete", chapter, method: :delete, 
                    class: "px-4 py-2 bg-red-600 hover:bg-red-500 text-white rounded-md font-medium text-sm", 
                    data: { turbo_confirm: "Are you sure you want to delete this chapter?" } %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-16">
        <div class="mb-8">
          <svg class="mx-auto h-24 w-24 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-medium text-gray-900 mb-4">No chapters yet</h3>
        <p class="text-gray-600 mb-8">Start writing your life story by creating your first chapter.</p>
        <%= link_to "Write Your First Chapter", new_chapter_path, class: "rounded-md px-6 py-3 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium" %>
      </div>
    <% end %>
  </div>
</div>
